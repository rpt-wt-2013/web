<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Css", false)
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    @RenderSection("Script", false)
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    <a href="@Url.Action("Index", "Home")" class="logo">Calamity</a>

                </h1>
            </div>
            <div id="logindisplay">
                @{Html.RenderAction("LogOnPartial", "Account");}
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li> @Html.ActionLink("Change password","ChangePassword","Account")</li>
                        <li> @Html.ActionLink("File Browser","Browse","Browser")</li>
                        <li> @Html.ActionLink("Video player","EmptyVideoPlayer","VideoPlayer")</li>
                        <li> @Html.ActionLink("Audio player","EmptyAudioPlayer","AudioPlayer")</li>
                        <li> @Html.ActionLink("Reader","EmptyReader","Reader")</li>
                    }
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            Copyright &copy; 1992-2013 Cubi, capo
        </div>
    </div>
</body>
</html>
